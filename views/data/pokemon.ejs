<% layout('../layout') -%>
<h3>Pokemon Overview</h3>

<div class="chart-box half-chart" id="levels-chart"></div>
<div class="chart-box half-chart">
    <h4>Review by Pokemon</h4>
    <form id="selectPokemon" class="center">
        <select>
            <%- include ../partials/_pokemon-select-menu.ejs %>
        </select>
        <input type="submit" value="Go!">
    </form>
    <h4>Top Ten Wonder Traded Pokemon </h4>
    <ol>
        <% for(var pokemon in topTenPokemon) { %>
            <li><%= topTenPokemon[pokemon][0] %> (<%= topTenPokemon[pokemon][1] %>)</li>
        <% } %>
    </ol>    
</div>
<div class="chart-box full-chart" id="pokemon-chart"></div>

<script>
	$(document).ready(function(){
		var today = new Date();
		function fmtDate(date, offset) {
			var newDate = new Date(date);
			if(offset) {
				newDate.setDate(date.getDate()+offset);							
			} 			
			return newDate.customFormatDate();			
		}

		var dateCategories = [
			fmtDate(today, -6),
			fmtDate(today, -5),
			fmtDate(today, -4),
			fmtDate(today, -3),
			fmtDate(today, -2),
			fmtDate(today, -1),
			fmtDate(today)
		];

        $('#selectPokemon').on('submit', function(){            
            var pokemonId = $(this).find('option:selected').val();
            if(pokemonId > 0 && pokemonId < 719) {
                window.location = '/data/pokemon/'+pokemonId;
            }            
            return false;
        });
				
		$('#pokemon-chart').highcharts({
            chart: {
                type: 'spline'
            },
            title: {
                text: 'Wonder Trades by Pokemon (past Week)'
            },            
            xAxis: {
                type: 'datetime',
                dateTimeLabelFormats: { // don't display the dummy year
                    day: '%b, %e'
                }
            },
            yAxis: {
                title: {
                    text: 'Wonder Trades'
                },
                min: 0
            },
            tooltip: {
                formatter: function() {
                        return '<b>'+ this.series.name +'</b><br/>'+ this.y;
                }
            },
            series: <%- trendingPokemonChart %>
        });


        $('#levels-chart').highcharts({
            chart: {
                type: 'column',
                height: '300'
            },
            title: {
                text: 'Pokemon by Levels'
            },            
            xAxis: {
                categories: [
                    '1-9',
                    '10-19',
                    '20-29',
                    '30-39',
                    '40-49',
                    '50-59',
                    '60-69',
                    '70-79',
                    '80-89',
                    '90-100'
                ]
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Pokemon Count'
                }
            },
            tooltip: {
                formatter: function() {
                        return '<b>'+ this.series.name +' '+this.x+'</b><br/>'+ this.y;
                }
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0,
                    showInLegend: false
                }
            },
            series: <%- levelBarChart %>
        });   	    
	});
</script>