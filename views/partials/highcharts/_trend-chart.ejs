$('#trend-chart').highcharts({
    chart: {
        type: 'spline'
    },
    title: {
        text: 'Wonder Trade Trends'
    },            
    xAxis: {
        type: 'datetime',
        dateTimeLabelFormats: { // don't display the dummy year
            day: '%b, %e'
        },
        plotLines: <% include _eventPlotlines.ejs %>
        },
    yAxis: {
        title: {
            text: 'Wonder Trades (% of day total)'
        },
        min: 0,
        labels: {
            format: '{value} %'
        }
    },
    tooltip: {
        formatter: function() {
                return '<b>'+ this.series.name +'</b>: '+ this.y+'%';
        }
    },
    series: <%- trendingPokemonChart %>
});