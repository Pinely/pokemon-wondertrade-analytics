$('#subregion-chart').highcharts({
    title: {
        text: 'Subregion Wondertrades'
    },
    tooltip: {
	    pointFormat: '{series.name} : <b>{point.y} ({point.percentage:.1f}%)</b>'
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
                enabled: true,
                color: '#000000',
                connectorColor: '#000000',
                format: '<b>{point.name}</b>: {point.y}'
            }
        }
    },
    series: [{
        type: 'pie',
        name: 'SubRegion',
        data: <%- subregionChart %>
    }]
});