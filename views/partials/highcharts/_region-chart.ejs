$('#region-chart').highcharts({
    title: {
        text: 'Wonder Trades by Country'
    },
    color: ['#fff00', '#000fff'],	        
    credits: {
		enabled: false
	},
    tooltip: {
	    pointFormat: '<b>{point.y}</b>'
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
                enabled: true,
                color: '#000000',
                connectorColor: '#000000',
                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
            }
        }
    },
    series: [{
        type: 'pie',
        name: 'Country',
        data: <%- countryChart %>
    }]
});